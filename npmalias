alias ni="npm install --save"
alias nidev="npm install --save-dev"
alias nt="npm test --silent"
alias nl="npm run lint --silent"
alias nr="npm run"
alias ns="npm start"

alias mit="echo '\n## License\n\n' >> readme.md && licejs mit | head -n 3 >> readme.md && echo '\n' >> readme.md && licejs mit > license"
alias gi="joe sublimetext node > .gitignore"

# quickly create a new issue on your idea repo
idea() {
	gh is --new --title $1 --message $2 --user parro-it --repo ideas
}




